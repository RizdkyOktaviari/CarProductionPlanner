@{
    ViewData["Title"] = "Car Production Planner - Create Plan";
}
@model List<AspnetCoreMvcFull.ViewModels.PlannerViewModel>
@* ************** Content ************** *@
<!-- Bootstrap Table with Header - Dark -->
<div class="card">
    <h5 class="card-header">Data Planner</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th>Description</th>
                    <th>Created By</th>
                    <th>Week</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Description</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.Week</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="@Url.Action("DetailPlanner", "Dashboards", new { id = item.Id, isPlanned = false })"><i class="bx bx-info-circle"></i> Details</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" style="text-align: center; vertical-align: middle;">No data found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--/ Bootstrap Table with Header Dark -->
